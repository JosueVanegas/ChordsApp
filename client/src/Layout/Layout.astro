---
import Header from "../components/Header";

interface Props {
  title: string;
  cardTitle: string;
  cardContent: string;
  buttonCardUrl: string;
  buttonMessage: string;
}

const { title, cardTitle, cardContent, buttonCardUrl, buttonMessage } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Otros elementos del head, como enlaces a estilos, scripts, etc. -->
  </head>
  <body class="body">
    <div class="header">
      <Header
        cardContent={cardContent}
        cardTitle={cardTitle}
        buttonUrl={buttonCardUrl}
        buttonMessage={buttonMessage}
      />
    </div>

    <div class="content">
      <div class="main-content">
        <slot />
      </div>

      <div class="right-content">aqui iran el top canciones</div>
    </div>

    <div class="footer">footer</div>

    <style>
      :root {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }
      .body {
        margin: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .header {
        background: linear-gradient(
          to left,
          rgb(50, 75, 216),
          rgb(13, 29, 150)
        );
        color: white;
        padding: 16px;
      }
      .content {
        display: flex;
        flex-direction: row;
      }
      .main-content {
        flex: 1;
        padding: 16px;
        background-color: white;
      }
      .right-content {
        width: 250px;
        background-color: rgb(234, 235, 240);
        color: white;
        padding: 16px;
      }
      .footer {
        background: linear-gradient(
          to left,
          rgb(50, 75, 216),
          rgb(13, 29, 150)
        );
        color: white;
        padding: 16px;
        margin-top: auto; /* Para empujar el pie de p√°gina hacia la parte inferior */
      }
    </style>
  </body>
</html>
